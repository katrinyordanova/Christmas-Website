{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('product_edit', {'id': product.id}) }}" method="post">
                <fieldset>
                    <legend>Edit a product</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_name">Name</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_name" placeholder="Name" name="product[name]" value="{{ product.name }}">
                        </div>
                    </div>
                    {#<div class="form-group">#}
                        {#<label class="col-sm-4 control-label" for="product_categoryId">Category</label>#}
                        {#<div class="col-sm-4 ">#}
                            {#<input class="form-control" id="product_categoryId" placeholder="Category" name="product[categoryId]" required>#}
                        {#</div>#}
                    {#</div>#}
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_price">Price</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_price" placeholder="Price" name="product[price]" value="{{ product.price }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_isInStock">In stock</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_isInStock" placeholder="In stock" name="product[isInStock]" value="{{ product.isInStock }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_description">Description</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_description" placeholder="Description" name="product[description]" value="{{ product.description }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_image">Image</label>
                        <div class="col-sm-4 ">
                            <input type="file" class="form-control" id="product_image" placeholder="Image" name="product[image]" value="{{ product.image }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-success">Edit</button>
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

