{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('product_add') }}" method="post">
                <fieldset>
                    <legend>Add a product</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_name">Name</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_name" placeholder="Name" name="product[name]" required>
                        </div>
                    </div>
                    {# @var category \ChristmasShopBundle\Entity\Category #}
                    {#{{ category.name }}#}
                    {#{% for products in product %}#}
                        {#{{ products.categoryId}}#}
                    {#{% endfor %}#}
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_name">Category</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="category_name" placeholder="{{ category.name }}" name="category[name]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_price">Price</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_price" placeholder="Price" name="product[price]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_isInStock">In stock</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_isInStock" placeholder="In stock" name="product[isInStock]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_description">Description</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="product_description" placeholder="Description" name="product[description]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_image">Image</label>
                        <div class="col-sm-4 ">
                            <input type="file" class="form-control" id="product_image" placeholder="Image" name="product[image]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                        </div>
                    </div>
                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}